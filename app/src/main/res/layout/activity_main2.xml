<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity2">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iasn_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Top View -->
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Grid of ImageButtons with Labels -->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_marginTop="-80dp"
        android:alignmentMode="alignMargins"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_view"
        app:layout_constraintBottom_toTopOf="@id/social_media"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Syllabus -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/syllabus_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/syllabus_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syllabus"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- YouTube -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/youtube_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/youtube_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YouTube"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Notes -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/notes_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/notes_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Question Papers -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/question_papers_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/question_papers_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question Papers"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Formulas -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/formulas_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/formulas_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formulas"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/notifications_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/notifications_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Assignments -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/assignments_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/assignments_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignments"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Practical Reports -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/assignments_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/assignments_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignments"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

</GridLayout>

    <!-- Social Media Handles -->
    <LinearLayout
        android:id="@+id/social_media"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/instagramButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/instagram"
            android:contentDescription="Instagram" />

        <ImageButton
            android:id="@+id/facebookButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="16dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/facebook"
            android:contentDescription="Facebook" />

        <ImageButton
            android:id="@+id/twitterButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="16dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/twitter"
            android:contentDescription="Twitter" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>