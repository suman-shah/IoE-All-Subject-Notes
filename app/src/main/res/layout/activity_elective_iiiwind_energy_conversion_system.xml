<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".model.ElectiveIIIWindEnergyConversionSystem">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="20dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <!-- Table Layout -->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:stretchColumns="1"
                android:divider="@android:color/darker_gray"
                android:showDividers="middle"
                android:background="@color/white">

                <!-- First Row -->
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Examination"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Regular / Back"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:background="@color/black"
                        android:padding="8dp"
                        android:gravity="center"/>
                </TableRow>

                <!-- Second Row -->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Level"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BE"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Full Marks"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="40"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>
                </TableRow>

                <!-- Third Row -->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Programme"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="All"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pass Marks"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="16"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>
                </TableRow>

                <!-- Fourth Row -->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Year/Part"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="I/I"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Time"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1 hrs."
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>
                </TableRow>

                <!--subject name dynamically added-->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subject:"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="left"/>
                    <TextView
                        android:id="@+id/subject_topic_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:gravity="center"/>
                </TableRow>

            </TableLayout>


            <ListView
                android:id="@+id/pdf_list_View_ElectiveIIIWindEnergyConversionSystem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:elevation="2dp"
                android:groupIndicator="@null"
                android:padding="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>